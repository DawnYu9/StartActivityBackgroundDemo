<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_dialog"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_no_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_handle"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_handle_in_second_activity_on_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/handle_in_second_activity_on_pause"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_handle_in_second_activity_on_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/handle_in_second_activity_on_stop"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_handle_in_second_activity_app_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/handle_in_second_activity_app_foreground"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_handle_in_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/handle_in_first_activity_on_resume"
        android:textAllCaps="false" />

</LinearLayout>
