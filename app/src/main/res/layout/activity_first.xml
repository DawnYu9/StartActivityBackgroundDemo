<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_no_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noHandle：5s"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_handle_in_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="handleInFirstActivity：5s"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_handle_in_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="handleInSecondActivity：5s"
        android:textAllCaps="false" />

</LinearLayout>
